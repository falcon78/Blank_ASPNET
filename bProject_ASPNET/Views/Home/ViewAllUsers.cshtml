@model IEnumerable<User>

@{
    ViewBag.Title = "ユーザー情報";
}

    <div class="card-deck">
        @foreach (var user in Model)
        {
            var photoPath = "~/images/" + (user.PhotoPath ?? "cat.png");
            <div class="card m-3">
                <div class="card-header">
                    <h3>@user.Name</h3>
                </div>
                <img width="300" class="card-img-top" src="@photoPath" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="userdetails" asp-route-id="@user.ID" class="btn btn-primary m-1">View</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@user.ID" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
